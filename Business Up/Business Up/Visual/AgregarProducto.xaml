<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Business_Up.Visual.AgregarProducto"
             xmlns:ControlsCustom="clr-namespace:Business_Up.Controls"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             BackgroundColor="Transparent">
    <ContentPage.Content>
        <StackLayout>

            <AbsoluteLayout VerticalOptions="FillAndExpand">

                <StackLayout AbsoluteLayout.LayoutBounds=" .5, .5" AbsoluteLayout.LayoutFlags="PositionProportional">

                    <Frame
                        HasShadow="True"
                        BackgroundColor="Gray"
                        BorderColor="Black"
                        CornerRadius="20"
                        Margin="20,0,20,0"
                        VerticalOptions="Center"
                        Padding="0">

                        <Grid 
                            RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto"
                            ColumnDefinitions="*"
                            RowSpacing="0">

                            <Button Grid.Row="0" x:Name="BotonAtras" BackgroundColor="Transparent" Text="X" TextColor="White" HorizontalOptions="End" VerticalOptions="Start" Margin="0,0,-15,0" Clicked="BotonAtras_Clicked"/>

                            <Label Grid.Row="0"  x:Name="Titulo" Text="Agregar Producto" FontAttributes="Bold" FontSize="20" TextColor="Black" HorizontalOptions="Center" Margin="0,10,0,0"/>

                            <StackLayout Grid.Row="1">
                                <Grid
                                    RowDefinitions="Auto"
                                    ColumnDefinitions="Auto, *"
                                    RowSpacing="0">

                                    <Label Grid.Column="0" VerticalOptions="Center" Text="Nombre:" TextColor="Black" FontSize="20" Margin="20,0,0,0"/>

                                    <ControlsCustom:MyEntry
                                        Margin="10,0,20,10"
                                        Grid.Column="1"
                                        xct:CornerRadiusEffect.CornerRadius="10"
                                        BackgroundColor="WhiteSmoke"
                                        ClearButtonVisibility="WhileEditing"
                                        IsSpellCheckEnabled="false"
                                        IsTextPredictionEnabled="True"
                                        WidthRequest="200"
                                        TextColor="Black"
                                        HorizontalTextAlignment="Start"
                                        x:Name="nombretxt"/>
                                </Grid>
                            </StackLayout>

                            <StackLayout Grid.Row="2">
                                <Grid
                                    RowDefinitions="Auto"
                                    ColumnDefinitions="Auto, *"
                                    RowSpacing="0">

                                    <Label Grid.Column="0" VerticalOptions="Center" Text="Contabilidad:" TextColor="Black" FontSize="20" Margin="20,0,0,0"/>

                                    <ControlsCustom:MyPicker 
                                        Grid.Column="1"
                                        Margin="10,0,20,10"
                                        x:Name="unidadMedida" 
                                        BackgroundColor="WhiteSmoke"
                                        HorizontalTextAlignment="Center"
                                        xct:CornerRadiusEffect.CornerRadius="20"
                                        Title="Unidad de medida" 
                                        TitleColor="Black"/>

                                </Grid>
                            </StackLayout>

                            <StackLayout Grid.Row="3">
                                <Grid
                                    RowDefinitions="Auto"
                                    ColumnDefinitions="Auto, *"
                                    RowSpacing="0">

                                    <Label Grid.Column="0" VerticalOptions="Center" Text="Precio Venta:" TextColor="Black" FontSize="20" Margin="20,0,0,0"/>

                                    <ControlsCustom:MyEntry
                                        Margin="10,0,20,10"
                                        Grid.Column="1"
                                        Keyboard="Numeric"
                                        xct:CornerRadiusEffect.CornerRadius="10"
                                        BackgroundColor="WhiteSmoke"
                                        ClearButtonVisibility="WhileEditing"
                                        WidthRequest="200"
                                        TextColor="Black"
                                        HorizontalTextAlignment="Start"
                                        x:Name="precioVentatxt"/>
                                </Grid>
                            </StackLayout>

                            <StackLayout Grid.Row="4">
                                <Grid
                                    RowDefinitions="Auto"
                                    ColumnDefinitions="Auto, *"
                                    RowSpacing="0">

                                    <Label Grid.Column="0" VerticalOptions="Center" Text="Precio Proveedor:" TextColor="Black" FontSize="20" Margin="20,0,0,0"/>

                                    <ControlsCustom:MyEntry
                                        Margin="10,0,20,10"
                                        Grid.Column="1"
                                        xct:CornerRadiusEffect.CornerRadius="10"
                                        BackgroundColor="WhiteSmoke"
                                        ClearButtonVisibility="WhileEditing"
                                        Keyboard="Numeric"
                                        WidthRequest="200"
                                        TextColor="Black"
                                        HorizontalTextAlignment="Start"
                                        x:Name="precioProveedortxt"/>
                                </Grid>
                            </StackLayout>

                            <StackLayout Grid.Row="5">
                                <Grid
                                    RowDefinitions="Auto"
                                    ColumnDefinitions="Auto, *"
                                    RowSpacing="0">

                                    <Label Grid.Column="0" VerticalOptions="Center" Text="Cantidad:" TextColor="Black" FontSize="20" Margin="20,0,0,0"/>

                                    <ControlsCustom:MyEntry
                                        Margin="10,0,20,10"
                                        Grid.Column="1"
                                        xct:CornerRadiusEffect.CornerRadius="10"
                                        BackgroundColor="WhiteSmoke"
                                        ClearButtonVisibility="WhileEditing"
                                        Keyboard="Numeric"
                                        WidthRequest="200"
                                        TextColor="Black"
                                        HorizontalTextAlignment="Start"
                                        x:Name="cantidadtxt"/>
                                </Grid>
                            </StackLayout>

                            <StackLayout Grid.Row="6">
                                <Grid
                                    RowDefinitions="Auto"
                                    ColumnDefinitions="Auto, *"
                                    RowSpacing="0">

                                    <Label Grid.Column="0" VerticalOptions="Center" Text="Código de barra:" TextColor="Black" FontSize="20" Margin="20,0,0,0"/>

                                    <ControlsCustom:MyEntry
                                        Margin="10,0,20,10"
                                        Grid.Column="1"
                                        xct:CornerRadiusEffect.CornerRadius="10"
                                        BackgroundColor="WhiteSmoke"
                                        ClearButtonVisibility="WhileEditing"
                                        IsSpellCheckEnabled="false"
                                        IsTextPredictionEnabled="True"
                                        WidthRequest="200"
                                        TextColor="Black"
                                        HorizontalTextAlignment="Start"
                                        x:Name="codigoBarratxt"/>
                                </Grid>
                            </StackLayout>

                            <Button x:Name="Agregar" Grid.Row="7" CornerRadius="0" HeightRequest="60" Text="Aceptar" Clicked="Agregar_Clicked"/>
                        </Grid>

                    </Frame>

                </StackLayout>

                <Frame x:Name="Mensaje" WidthRequest="300" HeightRequest="80" CornerRadius="5" Padding="0">
                    <Grid Padding="0" ColumnDefinitions="40,*" RowDefinitions="20,*">
                        <Button x:Name="cerrarNotificacion" Grid.Column="0" Grid.Row="1" BackgroundColor="Transparent" FontAttributes="Bold" TextColor="Blue" VerticalOptions="Center" Padding="0" Margin="0,0,0,10"/>
                        <StackLayout Grid.ColumnSpan="2" Grid.Row="0" BackgroundColor="Red">
                            <Label Grid.ColumnSpan="2" Grid.Row="0" Text="Advertencia" HorizontalTextAlignment="Center" TextColor="White" FontSize="18"/>
                        </StackLayout>
                        <Label x:Name="MensajeTexto" Grid.Column="1" Grid.Row="1" HorizontalTextAlignment="Start" VerticalTextAlignment="Start" TextColor="Black"/>
                    </Grid>
                </Frame>

            </AbsoluteLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>