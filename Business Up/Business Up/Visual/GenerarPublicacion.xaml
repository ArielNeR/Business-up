<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Business_Up.Visual.GenerarPublicacion">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Black">
            <Label Text="Edición de publicación" HorizontalOptions="Center" FontSize="35" FontAttributes="Bold" Margin="0,10,0,0" TextColor="White"/>
            <Label Text="Imagen" HorizontalOptions="Start" FontSize="15" FontAttributes="Bold" Margin="20,0,0,0" TextColor="White"/>
            <Button x:Name="SeleccionarImagen" Text="Seleccionar imagen" Clicked="OnSelectButtonClicked" HorizontalOptions="Center" CornerRadius="20"/>
            <Image x:Name="PostImage" Aspect="AspectFit" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
            <Label Text="Título" HorizontalOptions="Start" FontSize="15" FontAttributes="Bold" Margin="20,0,0,0" TextColor="White"/>
            <Entry x:Name="titulo" BackgroundColor="WhiteSmoke"/>
            <Label Text="Descripción" HorizontalOptions="Start" FontSize="15" FontAttributes="Bold" Margin="20,0,0,0" TextColor="White"/>
            <Entry x:Name="descripcion" BackgroundColor="WhiteSmoke"/>
            <StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand" HorizontalOptions="Center" Padding="20">
                <Button x:Name="ButtonShare" Text="Publicar" Clicked="ButtonShare_Clicked" CornerRadius="20"/>
                <Button x:Name="ButtonCancel" Text="Cancelar"  Clicked="ButtonCancel_Clicked" CornerRadius="20"/>
            </StackLayout>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>