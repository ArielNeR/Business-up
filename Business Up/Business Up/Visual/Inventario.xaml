<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ControlsCustom="clr-namespace:Business_Up.Controls"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             x:Class="Business_Up.Visual.Inventario"
             Title="Inventario">
    <ContentPage.Content>
        <StackLayout BackgroundColor="AliceBlue">
            <Grid VerticalOptions="FillAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Frame
                    Grid.Row="0"
                    Padding="0"
                    CornerRadius="35"
                    HeightRequest="80"
                    BorderColor="Gray"
                    Margin="5,-30,5,0">
                    <Grid VerticalOptions="End" HorizontalOptions="Center" Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Text="Buscar" FontSize="20" FontAttributes="Bold" VerticalOptions="Center" Margin="20,0,0,0"/>
                        <ControlsCustom:MyEntry
                                        Margin="0,0,20,0"
                                        Grid.Column="1"
                                        HorizontalOptions="Start"
                                        xct:CornerRadiusEffect.CornerRadius="25"
                                        BackgroundColor="Gray"
                                        ClearButtonVisibility="WhileEditing"
                                        IsSpellCheckEnabled="false"
                                        IsTextPredictionEnabled="True"
                                        HeightRequest="40"
                                        WidthRequest="200"
                                        TextColor="White"
                                        HorizontalTextAlignment="Center"
                                        x:Name="buscartxt"
                                        TextChanged="buscartxt_TextChanged"/>
                    </Grid>
                </Frame>
                
                <StackLayout Grid.Row="1">
                    <Frame
                        HasShadow="False"
                        CornerRadius="25"
                        Margin="20,5,20,5"
                        BorderColor="Black"
                        Padding="0">

                        <Grid
                            RowDefinitions="auto , *"
                            ColumnDefinitions="*">

                            <StackLayout BackgroundColor="Black" Grid.Row="0">
                                <Label HorizontalOptions="Center" VerticalOptions="Center" Text="Items" FontAttributes="Bold" FontSize="30" TextColor="White"/>
                            </StackLayout>

                            <ListView
                                VerticalScrollBarVisibility="Never"
                                IsPullToRefreshEnabled="True"
                                Grid.Row="1" Grid.Column="0"
                                x:Name="ViewProductos"
                                ItemsSource="{Binding GetProductos}" 
                                HasUnevenRows="True" 
                                SelectionMode="None" 
                                SeparatorVisibility="None"
                                ItemTapped="ViewProductos_ItemTapped"
                                Margin="0,0,0,10">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>

                                            <StackLayout>
                                                <Frame
                                                CornerRadius="20"
                                                Margin="10,5,10,5"
                                                Padding="0">
                                                    <Grid
                                                    RowDefinitions="Auto, Auto, Auto"
                                                    ColumnDefinitions="*,40"
                                                    RowSpacing="0"
                                                    Margin="10, 10">

                                                        <Grid Grid.RowSpan="3" Grid.Column="1" RowSpacing="0" ColumnDefinitions="auto" RowDefinitions="*,*">
                                                            <Button Grid.Row="0" Text="x" x:Name="EliminarItem" CommandParameter="{Binding .}" TextTransform="Lowercase" VerticalOptions="Center" CornerRadius="25" Padding="-10" HeightRequest="30" WidthRequest="40" BackgroundColor="PaleVioletRed" Clicked="EliminarItem_Clicked"/>
                                                            <Button Grid.Row="1" Text="--" x:Name="ModificarCantidadItem" CommandParameter="{Binding .}" TextTransform="Lowercase" VerticalOptions="Center" CornerRadius="25" Padding="-10" HeightRequest="30" WidthRequest="40" BackgroundColor="LightCoral" Clicked="ModificarCantidadItem_Clicked"/>
                                                        </Grid>
                                                        
                                                        <StackLayout Grid.Row="0" Grid.Column="0">
                                                            <Label Text="{Binding Nombre}" FontSize="25" TextColor="Black" FontAttributes="Bold" Margin="10,0,0,0"/>
                                                        </StackLayout>

                                                        <StackLayout Grid.Row="1" Grid.Column="0">
                                                            <Label Text="{Binding Tipo}" FontSize="18" TextColor="DarkGray" FontAttributes="None" Margin="10,0,0,0"/>
                                                        </StackLayout>

                                                        <StackLayout Grid.Row="2" Grid.Column="0">
                                                            <Grid
                                                            RowDefinitions="auto"
                                                            ColumnDefinitions="auto,auto">

                                                                <Label Grid.Column="0" Text="{Binding DatoPrecio}" FontSize="16" TextColor="Blue" Margin="10,0,0,0"/>
                                                                <Label Grid.Column="1" Text="{Binding DatoCantidad}" FontSize="16" TextColor="DarkGreen" Margin="10,0,10,0"/>

                                                            </Grid>
                                                        </StackLayout>

                                                    </Grid>
                                                </Frame>
                                            </StackLayout>

                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>

                            </ListView>

                        </Grid>
                        
                    </Frame>
                    
                </StackLayout>

                <!--<ImageButton
                    Grid.Row="1"
                    BackgroundColor="Red"
                    x:Name="AgregarItem"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Margin="0,0,10,40"
                    WidthRequest="70"
                    HeightRequest="70"
                    CornerRadius="100"
                    Clicked="AgregarItem_Clicked"/>-->

                <Button Grid.Row="1"
                        BackgroundColor="Blue"
                        x:Name="buttonAgregar"
                        Text=" Agregar  "
                        TextColor="White"
                        CornerRadius="30"
                        HorizontalOptions="End"
                        VerticalOptions="End"
                        Margin="0,0,20,50"
                        Clicked="buttonAgregar_Clicked"/>

                <Frame x:Name="Picker" Grid.Row="1" 
                       BackgroundColor="Transparent"
                       IsVisible="False"
                       HorizontalOptions="End"
                       VerticalOptions="End"
                       Padding="0"
                       Margin="0,0,20,110">
                    <Grid
                        RowSpacing="0"
                        RowDefinitions="auto , auto"
                        ColumnDefinitions="*">
                        <StackLayout Grid.Row="0">
                            <Button x:Name="AgregarProducto" Clicked="AgregarProducto_Clicked" CornerRadius="10"  BorderColor="Black" BorderWidth="1" Text="Producto"  Margin="0,0,0,1"/>
                        </StackLayout>

                        <StackLayout Grid.Row="1">
                            <Button x:Name="AgregarServicio" Clicked="AgregarServicio_Clicked" CornerRadius="10" BorderColor="Black" BorderWidth="1" Text="Servicio" Margin="0,1,0,0"/>
                        </StackLayout>
                        
                    </Grid>
                </Frame>

                <Frame Grid.Row="2" CornerRadius="15" BorderColor="Black" x:Name="PanelSeleccionItem" Padding="0" IsVisible="true" BackgroundColor="Gray" Margin="10,0,10,20">
                    <Grid ColumnDefinitions="*,*" RowDefinitions="auto,auto" RowSpacing="20">
                        <Label Grid.Column="0" Grid.Row="0" x:Name="DatosItem" VerticalOptions="Center"  HorizontalOptions="Center" Text="Item" FontAttributes="Bold" FontSize="25" Margin="10"/>
                        <Grid Grid.Column="1" Grid.Row="0" ColumnDefinitions="*, *" RowDefinitions="auto">
                            <Label Grid.Column="0" HorizontalOptions="Center" x:Name="labelCantidad" Text="Cantidad" HorizontalTextAlignment="Center" FontAttributes="Bold" FontSize="20" TextColor="White" Margin="0,20,0,0"/>
                            <ControlsCustom:MyEntry
                                        Keyboard="Numeric"
                                        MaxLength="4"
                                        Margin="0,10,20,0"
                                        Grid.Column="1"
                                        xct:CornerRadiusEffect.CornerRadius="10"
                                        BackgroundColor="WhiteSmoke"
                                        ClearButtonVisibility="WhileEditing"
                                        HeightRequest="45"
                                        WidthRequest="80"
                                        TextColor="Black"
                                        HorizontalTextAlignment="Start"
                                        Text="0"
                                        x:Name="cantidadtxt"
                                        Completed="cantidadtxt_Completed"
                                        Focused="cantidadtxt_Focused"
                                        Unfocused="cantidadtxt_Unfocused"/>
                        </Grid>
                        <Button Grid.Column="0" Grid.Row="1" x:Name="Atras" Text="Atrás" HorizontalOptions="Center" CornerRadius="15" Margin="0,0,0,20" Clicked="Atras_Clicked"/>
                        <Button Grid.Column="1" Grid.Row="1" x:Name="Aceptar" Text=" Agregar " HorizontalOptions="Center" CornerRadius="15" Margin="0,0,0,20" Clicked="Aceptar_Clicked"/>

                    </Grid>
                </Frame>


            </Grid>

            
            
            
        </StackLayout>

    </ContentPage.Content>
</ContentPage>