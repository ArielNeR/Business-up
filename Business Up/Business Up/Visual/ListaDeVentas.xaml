<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ControlsCustom="clr-namespace:Business_Up.Controls"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             x:Class="Business_Up.Visual.ListaDeVentas">
    <ContentPage.Content>
        <StackLayout BackgroundColor="AliceBlue">
            <Grid VerticalOptions="FillAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Frame
                    Grid.Row="0"
                    Padding="0"
                    CornerRadius="35"
                    HeightRequest="80"
                    BorderColor="Gray"
                    Margin="5,-30,5,0">
                    <Grid VerticalOptions="End" HorizontalOptions="Center" Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Text="Buscar" FontSize="20" FontAttributes="Bold" VerticalOptions="Center" Margin="20,0,0,0"/>
                        <ControlsCustom:MyEntry
                                        Margin="0,0,20,0"
                                        Grid.Column="1"
                                        HorizontalOptions="Start"
                                        xct:CornerRadiusEffect.CornerRadius="25"
                                        BackgroundColor="Gray"
                                        ClearButtonVisibility="WhileEditing"
                                        IsSpellCheckEnabled="false"
                                        IsTextPredictionEnabled="True"
                                        HeightRequest="40"
                                        WidthRequest="200"
                                        TextColor="White"
                                        HorizontalTextAlignment="Center"
                                        x:Name="buscartxt"
                                        TextChanged="buscartxt_TextChanged"/>
                    </Grid>
                </Frame>

                <StackLayout Grid.Row="1">
                    <Frame
                        HasShadow="False"
                        CornerRadius="25"
                        Margin="20,10,20,20"
                        BorderColor="Black"
                        Padding="0">

                        <Grid
                            RowDefinitions="auto , *"
                            ColumnDefinitions="*">

                            <StackLayout BackgroundColor="Black" Grid.Row="0">
                                <Label HorizontalOptions="Center" VerticalOptions="Center" Text="Listado de ventas" FontAttributes="Bold" FontSize="30" TextColor="White"/>
                            </StackLayout>

                            <ListView
                                VerticalScrollBarVisibility="Never"
                                IsPullToRefreshEnabled="True"
                                Grid.Row="1" Grid.Column="0"
                                x:Name="ViewVentas"
                                ItemsSource="{Binding GetVentas}" 
                                HasUnevenRows="True" 
                                SelectionMode="Single" 
                                SeparatorVisibility="None"
                                ItemSelected="ViewVentas_ItemSelected">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>

                                            <StackLayout>
                                                <Frame
                                                CornerRadius="20"
                                                Margin="10,5,10,5"
                                                Padding="0">
                                                    <Grid
                                                    RowDefinitions="Auto, Auto, Auto"
                                                    ColumnDefinitions="*"
                                                    RowSpacing="0"
                                                    Margin="10, 10">

                                                        <StackLayout Grid.Row="0" Grid.Column="0">
                                                            <Label Text="{Binding Cliente.Nombre}" FontSize="25" TextColor="Black" FontAttributes="Bold" Margin="10,0,0,0"/>
                                                        </StackLayout>

                                                        <StackLayout Grid.Row="1" Grid.Column="0">
                                                            <Label Text="{Binding Total}" FontSize="18" TextColor="DarkGray" FontAttributes="None" Margin="10,0,0,0"/>
                                                        </StackLayout>

                                                        <StackLayout Grid.Row="2" Grid.Column="0">
                                                            <Label Text="{Binding DatoFecha}" FontSize="18" TextColor="DarkGray" FontAttributes="None" Margin="10,0,0,0"/>
                                                        </StackLayout>
                                                        <Button x:Name="VerFactura" Grid.RowSpan="3" Text="Ver factura" HorizontalOptions="End" VerticalOptions="Center" CommandParameter="{Binding .}" CornerRadius="15" Clicked="VerFactura_Clicked"/>
                                                    </Grid>
                                                </Frame>
                                            </StackLayout>

                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>

                            </ListView>

                        </Grid>

                    </Frame>

                </StackLayout>
            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>