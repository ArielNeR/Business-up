<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Business_Up.Visual.Registro"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:EntryCustom="clr-namespace:Business_Up.Controls">
    <ContentPage.Content>
        <Grid RowSpacing="0"
              x:Name="gridApp">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <Image Source="fonfoLogin.jpeg" Aspect="AspectFill"/>


            <Frame Grid.Row="0"
                   x:Name="control"
                   Background="#C3F7A2"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   WidthRequest="250"
                   HeightRequest="520"
                   Margin="0,20,0,20"
                   CornerRadius="40">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />

                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <Image
                            x:Name="icono"
                            Source="loginLogo.png"
                            Grid.Row="0"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            WidthRequest="190"
                            HeightRequest="190"/>

                        <Frame
                                Grid.Row="1"
                                Background="#C8F9F8"
                                BorderColor="Gray"
                                VerticalOptions="Center"
                                HorizontalOptions="Fill"
                                Padding="0"
                                Margin="10,5,10,5"
                                CornerRadius="30">

                            <EntryCustom:MyEntry
                                    Margin="1"
                                    ClearButtonVisibility="WhileEditing"
                                    IsSpellCheckEnabled="false"
                                    IsTextPredictionEnabled="True"
                                    WidthRequest="200"
                                    TextColor="Black"
                                    HorizontalTextAlignment="Center"
                                    Placeholder="Usuario"
                                    PlaceholderColor="Black"
                                    x:Name="usuariotext">

                            </EntryCustom:MyEntry>

                        </Frame>

                        <Label Grid.Row="1" x:Name="MensajeUsuario" HorizontalOptions="Center" VerticalOptions="Start" TextColor="Red" Margin="0,-14,0,0" FontSize="15"/>

                        <Frame
                                Grid.Row="2"
                                Background="#C8F9F8"
                                BorderColor="Gray"
                                VerticalOptions="Center"
                                HorizontalOptions="Fill"
                                Padding="0"
                                Margin="10,5,10,5"
                                CornerRadius="30">

                            <EntryCustom:MyEntry
                                    ClearButtonVisibility="WhileEditing"
                                    IsSpellCheckEnabled="false"
                                    IsTextPredictionEnabled="false"
                                    WidthRequest="200"
                                    TextColor="Black"
                                    HorizontalTextAlignment="Center"
                                    Placeholder="Contraseña"
                                    PlaceholderColor="Black"
                                    x:Name="contratxt">

                            </EntryCustom:MyEntry>

                        </Frame>

                        <Label Grid.Row="2" x:Name="MensajeContra" HorizontalOptions="Start" VerticalOptions="Start" TextColor="Red" Margin="30,-11,0,0" FontSize="14"/>

                        <Frame
                                Grid.Row="3"
                                Background="#C8F9F8"
                                BorderColor="Gray"
                                VerticalOptions="Center"
                                HorizontalOptions="Fill"
                                Padding="0"
                                Margin="10,5,10,5"
                                CornerRadius="30">

                            <EntryCustom:MyEntry
                                    ClearButtonVisibility="WhileEditing"
                                    IsSpellCheckEnabled="false"
                                    IsTextPredictionEnabled="True"
                                    WidthRequest="200"
                                    TextColor="Black"
                                    HorizontalTextAlignment="Center"
                                    Placeholder="Correo"
                                    PlaceholderColor="Black"
                                    x:Name="correotxt">

                            </EntryCustom:MyEntry>

                        </Frame>

                        <Label Grid.Row="3" x:Name="MensajeCorreo" HorizontalOptions="Start" VerticalOptions="Start" TextColor="Red" Margin="30,-11,0,0" FontSize="14"/>

                        <Button
                                Grid.Row="4"
                                BackgroundColor="White"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                WidthRequest="150"
                                CornerRadius="20"
                                Text="Registrar" 
                                x:Name="registro"
                                TextColor="Blue"
                                Clicked="registro_Clicked">
                        </Button>


                        <Label
                               Grid.Row="5"
                               Text="REGISTRO DE CUENTA"
                               HorizontalTextAlignment="Center"
                               TextColor="Gray"
                               FontSize="22"
                                Margin="0,20,0,10"
                               FontAttributes="Bold"/>


                        <ActivityIndicator
                            x:Name="progreso"
                            Grid.Row="4"
                            HorizontalOptions="Start"
                            Color="Blue" 
                            IsRunning="False">
                        </ActivityIndicator>


                    </Grid>


            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>