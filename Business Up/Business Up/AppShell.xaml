<?xml version="1.0" encoding="utf-8" ?>
<Shell  xmlns="http://xamarin.com/schemas/2014/forms"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:visual="clr-namespace:Business_Up.Visual"
        x:Class="Business_Up.AppShell"
        BackgroundColor="{DynamicResource WindowBackgroundColor}"
        Shell.NavBarIsVisible="False">
    <Shell.Resources>
        <Style TargetType="TabBar">
            <Setter Property="Shell.TabBarBackgroundColor" Value="{DynamicResource TabBarBackgroundColor}" />
            <Setter Property="Shell.TabBarDisabledColor" Value="{DynamicResource TabBarDisabledColor}"/>
            <Setter Property="Shell.TabBarForegroundColor" Value="{DynamicResource TabBarForegroundColor}" />
            <Setter Property="Shell.TabBarTitleColor" Value="{DynamicResource TabBarTitleColor}"/>
            <Setter Property="Shell.TabBarUnselectedColor" Value="{DynamicResource TabBarUnselectedColor}" />
        </Style>
    </Shell.Resources>

    <!--<TabBar Route="main">
        <Tab Title="Inicio" Route="Inicio" Icon="Home.png">
            <ShellContent ContentTemplate="{DataTemplate visual:Home}" />
        </Tab>
        <Tab Title="Perfil" Route="Perfil" Icon="Profile.png">
            <ShellContent ContentTemplate="{DataTemplate visual:Profile}" />
        </Tab>
    </TabBar>-->

    <TabBar Route="main">
        <Tab Title="Inicio" Route="Inicio" Icon="Home.png">
            <ShellContent x:Name="TabInicio" />
        </Tab>
        <Tab Title="Balance" Route="Administracion" Icon="Balance.png">
            <ShellContent x:Name="TabAdministracion" />
        </Tab>
        <Tab Title="Publicaciones" Route="Publicaciones" Icon="Publication.png">
            <ShellContent x:Name="TabPublicaciones" />
        </Tab>
        <Tab Title="Perfil" Route="Perfil" Icon="Perfil.png">
            <ShellContent x:Name="TabPerfil" />
        </Tab>
    </TabBar>

</Shell>