<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".BusinessUpApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BusinessUp"
        tools:targetApi="31">

        <!-- Splash Screen -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.BusinessUp.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Register Activity -->
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Main Activity (with Bottom Navigation) -->
        <activity
            android:name=".ui.home.MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <!-- Sales/Invoice Activity -->
        <activity
            android:name=".ui.sales.SaleActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Add Product Activity -->
        <activity
            android:name=".ui.inventory.AddProductActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Add Service Activity -->
        <activity
            android:name=".ui.inventory.AddServiceActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Add Client Activity -->
        <activity
            android:name=".ui.clients.AddClientActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Sales List Activity -->
        <activity
            android:name=".ui.sales.SalesListActivity"
            android:exported="false" />

        <!-- Edit Profile Activity -->
        <activity
            android:name=".ui.profile.EditProfileActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- PDF Viewer Activity -->
        <activity
            android:name=".ui.pdf.PdfViewerActivity"
            android:exported="false" />

        <!-- Select Client Activity -->
        <activity
            android:name=".ui.clients.SelectClientActivity"
            android:exported="false" />

        <!-- Clients List Activity -->
        <activity
            android:name=".ui.clients.ClientsActivity"
            android:exported="false" />

        <!-- Inventory Activity -->
        <activity
            android:name=".ui.inventory.InventoryActivity"
            android:exported="false" />

        <!-- Select Inventory Item Activity -->
        <activity
            android:name=".ui.inventory.SelectInventoryActivity"
            android:exported="false" />

        <!-- FileProvider for sharing PDFs -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
